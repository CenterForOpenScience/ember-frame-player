{{! template-lint-disable invalid-interactive}}
{{! template-lint-disable style-concatenation}}

<div class="exp-lookit-image-audio">

    <div class="row recorder-container video-recorder-hidden">
        <div id="recorder" class="col-xs-12">
        </div>
    </div>

    <div id="image-area" class="{{if noStoryControls "image-area-no-controls"}}" >
        {{#if (or doRecording startSessionRecording)}}
            <p id='waitForVideo'> establishing video connection <br> please wait... </p>
        {{/if}}

        {{#each images_parsed as |image|}}
            <div id="{{image.id}}" class="story-image-container {{if image.fill "image-fill"}} {{if image.position image.position}}">
                <img src={{image.src}} class="story-image " alt={{image.alt}}>
            </div>
        {{/each}}

        {{#if leftImage}}
            <div id="left-container">
                <img id="left-image" src={{leftImage_parsed}} class="stim-image" alt="left image">
            </div>
        {{/if}}
        {{#if rightImage}}
            <div id="right-container">
                <img id="right-image" src={{rightImage_parsed}} class="stim-image" alt="right image">
            </div>
        {{/if}}
        {{#if centerImage}}
            <div id="center-container">
                <img id="center-image" src={{centerImage_parsed}} class="stim-image" alt="center image">
            </div>
        {{/if}}
    </div>

    {{#unless updatedIsFullscreen}}
        <button class="btn btn-warning exp-lookit-story-page" id="fsButton" {{ action 'showFullscreen'}} >
            please return
            <br>
            to fullscreen
        </button>
    {{/unless}}

    {{#if audio_parsed}}
        <audio class="player-audio" id="player-audio" onended={{action 'finishedAudio'}} ontimeupdate={{action 'updateCharacterHighlighting'}}>
            {{#each audio_parsed as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}
        </audio>
    {{/if}}

    {{#unless noStoryControls}}

        <div id="story-controls">
            {{#unless autoProceed}}
                <div class="button-container left">
                    {{#if showPreviousButton}}
                        <button id="previousbutton" class="btn btn-primary" {{ action 'previous' }} >
                            <i class="fa fa-arrow-left"></i> Previous
                        </button>
                    {{/if}}
                    {{#if (and showReplayButton audio_parsed)}}
                        <button id="replaybutton" class="btn btn-primary"  {{ action 'replay' }}>
                            <i class="fa fa-repeat"></i> Replay
                        </button>
                    {{/if}}
                </div>
            {{/unless}}

            {{#unless noParentText}}
                <div id="parenttext">
                    {{#if showProgressBar}}
                        <div class="progress" id="progressbar">
                            <div class="progress-bar bg-info progress-bar-striped" role="progressbar" style="width:0%" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    {{/if}}
                    {{exp-text-block block=parentTextBlock}}
                </div>
            {{/unless}}

            {{#unless autoProceed}}
                <div class="button-container right">
                    <button id="nextbutton" class="btn btn-success fill" {{ action 'finish' }} >
                        Next <i class="fa fa-arrow-right"></i>
                    </button>
                </div>
            {{/unless}}


        </div>
    {{/unless}}

</div>

